" general
set backspace=indent,eol,start
set linebreak
set number
set ruler
set showmatch
set textwidth=100
set undolevels=1000
set visualbell
 
" search
set hlsearch
set ignorecase
set incsearch
set smartcase
 
" indentation
set autoindent
set expandtab
set shiftwidth=4
set smartindent
set smarttab
set softtabstop=4

" colors
syntax enable
set background=light
colorscheme solarized

" disable q: and Q
map q: <Nop>
nnoremap Q <nop>

