source ~/.vimrc

" enable built-in ideavim plugins
set easymotion
set surround
set multiple-cursors

" settings
set ideamarks
set idearefactormode visual
set showmode

" key mappings
nnoremap <silent> <Leader>wx :action ChangeSplitOrientation<CR>

" remap conflicting keymaps for multiple-cursors plugin
map <C-N> <A-N>
map <C-P> <A-P>
map <C-X> <A-X>
map g<C-N> g<A-N>

