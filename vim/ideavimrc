source ~/.vimrc

" enable built-in ideavim plugins
set easymotion
set surround
set multiple-cursors

" settings
set ideamarks
set idearefactormode visual
set showmode

" mappings
map <C-w>x :action ChangeSplitOrientation<Enter>
map <C-c>l :action MTSolarizedLightTheme<Enter>
map <C-c>d :action MTSolarizedDarkTheme<Enter>

" remap conflicting keymaps for multiple-cursors plugin
map <C-N> <A-N>
map <C-P> <A-P>
map <C-X> <A-X>
map g<C-N> g<A-N>

