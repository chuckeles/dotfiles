#
# my bash aliases
#

# ls
alias l="ls -CFh"
alias la="l -A"
alias ll="l -l"
alias lla="l -Al"
alias lal=lla

# commonly used programs
alias b=bower
alias g=git
alias gu=gulp
alias n=npm
alias no=node

# bower
alias bi="bower install"
alias bl="bower list"
alias bs="bower search"

# npm
alias ni="npm install"
alias nl="npm list"
alias ns="npm search"
