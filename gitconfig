[alias]
  a = add
  aa = add --all
  aaco = !git add --all && git commit
  aacoa = !git add --all && git commit --amend
  b = branch
  co = commit
  coa = commit --amend
  ce = checkout
  d = diff
  f = fetch
  l = log --graph --decorate --all --pretty=oneline --abbrev-commit
  ps = push
  pl = pull
  rb = rebase
  rbi = rebase -i
  rs = reset
  rsh = reset --hard
  s = status

