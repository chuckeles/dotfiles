[user]
    name = Martin Jakubik
    email = martin@jakubik.info

[commit]
    gpgsign = true

[gpg]
    program = /usr/local/bin/gpg

[push]
    default = current

[core]
    editor = nvim
    ignorecase = false
    hooksPath = ~/.githooks

[color]
    diff = auto
    ui = auto

[pull]
    ff = only

[alias]
    a = add
    aa = add --all
    aaco = !git add --all && git commit
    aacoa = !git add --all && git commit --amend --no-edit
    aacoae = !git add --all && git commit --amend
    bl = blame
    b = branch
    bd = branch --delete
    bs = bisect
    bsb = bisect bad
    bsg = bisect good
    bsl = bisect log
    bss = bisect start
    bsv = bisect view
    cl = clone
    co = commit
    coa = commit --amend --no-edit
    coae = commit --amend
    ce = checkout
    ceb = checkout -b
    cp = cherry-pick
    cpc = cherry-pick --continue
    cps = cherry-pick --skip
    cpa = cherry-pick --abort
    d = diff
    ds = diff --stat
    de = describe --tags
    f = fetch --prune
    fpl = !git fetch --prune && git pull
    l = log --oneline
    lg = log --graph --decorate --all --pretty=oneline --abbrev-commit
    m = merge
    ma = switch master
    mff = merge --ff-only
    mnff = merge --no-ff
    ps = push -u --follow-tags
    psf = push -u --force-with-lease
    pl = pull
    plr = pull --rebase
    rb = rebase
    rba = rebase --abort
    rbc = rebase --continue
    rbma = rebase master
    rbi = rebase -i
    re = restore
    rs = reset
    rsh = reset --hard
    rss = reset --soft
    s = status
    su = submodule
    sua = submodule add
    suur = submodule update --remote
    suui = submodule update --init --recursive
    sw = switch
    swb = switch --create
    st = stash
    stp = stash pop
    t = tag
    ts = tag --sign

    count = !git ls-files | xargs wc -l
    last = show --name-only

[include]
    path = ~/.gitconfig-system-specific

# https://git-scm.com/docs/git-config#_conditional_includes
[includeIf "gitdir:**/projects/work/**"]
    path = ~/.gitconfig-work

