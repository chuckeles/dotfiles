    name = Martin Jakubik
    email = martin.jakubik@exponea.com
    signingKey = 04694F986FD761AFC03245FC3E8024ECD351177C

[gpg]
    program = /usr/local/bin/gpg

[push]
    default = current

[core]
    editor = vim
    excludesfile = /Users/chuckeles/.gitignore_global
    ignorecase = false

[color]
    diff = auto
    ui = auto

[alias]
    a = add
    aa = add --all
    aaco = !git add --all && git commit
    aacoa = !git add --all && git commit --amend --no-edit
    aacoae = !git add --all && git commit --amend
    b = branch
    bd = branch --delete
    bs = bisect
    bsb = bisect bad
    bsg = bisect good
    bsl = bisect log
    bss = bisect start
    bsv = bisect view
    cl = clone
    co = commit
    coa = commit --amend --no-edit
    coae = commit --amend
    ce = checkout
    ceb = checkout -b
    cp = cherry-pick
    cpc = cherry-pick --continue
    cps = cherry-pick --skip
    cpa = cherry-pick --abort
    d = diff
    ds = diff --stat
    de = describe --tags
    f = fetch --prune
    fpl = !git fetch --prune && git pull
    l = log --oneline
    lg = log --graph --decorate --all --pretty=oneline --abbrev-commit
    m = merge
    mff = merge --ff-only
    mnff = merge --no-ff
    ps = push -u --follow-tags
    psf = push -u --force-with-lease
    pl = pull
    plr = pull --rebase
    rb = rebase
    rba = rebase --abort
    rbc = rebase --continue
    rbi = rebase -i
    rs = reset
    rsh = reset --hard
    rss = reset --soft
    s = status
    su = submodule
    sua = submodule add
    suur = submodule update --remote
    suui = submodule update --init --recursive
    st = stash
    stp = stash pop
    t = tag
    ts = tag --sign

    count = !git ls-files | xargs wc -l
    last = show --name-only

[includeIf "gitdir:~/projects/work/"]
    path = .gitconfig-work

