" general
set backspace=indent,eol,start
set linebreak
set number
set ruler
set showbreak=">>> "
set showmatch
set textwidth=100
set undolevels=1000
set visualbell
 
" search
set hlsearch
set ignorecase
set incsearch
set smartcase
 
" indentation
set autoindent
set expandtab
set shiftwidth=2
set smartindent
set smarttab
set softtabstop=2

" colors
syntax enable
set background=dark
colorscheme solarized

